<p id="notice"><%= notice %></p>
<div class="container">

	<div class="panel panel-primary">
		
		<div class="panel-heading">
			<%= @post.title %>
		</div>
			<p><%= link_to @post.user.username, user_profile_path(id: @post.user.id) %></p>

		<div class="panel-body">
			<p><%= @post.user.email %></p>
			<p><%= time_ago_in_words(@post.created_at) %>
			ago</p>
			<p><%= @post.post_entry %></p>
		</div>

		<div class="panel-footer">
      		<% if current_user.id == @post.user.id %>
      		<%= link_to "Edit", edit_post_path(@post), class: "btn btn-info" %>
      		<%= link_to "All Blog Posts", posts_path, class: "btn btn-primary" %>
      <% end %>
    </div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading">
			Comments
		</div>

		<div class="panel-body">
			<%= render @post_comment %>
		</div>
	</div>

		<div class="panel panel-success">
			<div class="panel-heading">
				Make a Comment:
			</div>
		</div>	

	<div class="panel-body">
		<%= render 'post_comments/form' %>
	</div>
</div>

